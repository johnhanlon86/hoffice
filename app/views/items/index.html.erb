<p id="notice"><%= notice %></p>

  <div id="items Container">
  
    <h1>Items</h1>
     
      <% @items.each do |item| %>
      <div class="itemhols">
       <h1><%= item.title %></h1>
       <h1>Id Is: <%= item.id %></h1>
       
        <%= link_to (image_tag item.image_url, :class => "itemholsIm"), item %>
        <p><%= item.description %></p>
       <p>Price <%= number_to_currency(item.price, :unit => "â‚¬") %>
       <br>
        Category: <%= item.category %>
        <br>
        Brand: <%= item.brand %></p>
       
       <p>
         <%= link_to 'Show',  item, :class => "button", :role => "button" %>
         
       
        <a href="/cart/<%= item.id %>" class="button">Add to Cart</a>

      
            <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_item_path(item), :class => "button", :role => "button" %></td>
          <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, :class => "button", :role => "button" %></td>
      
       
       
        </p>
        
  
      </div>
    <% end %>

     <% if user_signed_in? %>
     
        <%= link_to 'New Item', new_item_path, :class =>"button", :role=>"button" %>  
        <%= link_to 'New Category', new_category_path, :class =>"button", :role=>"button"  %>

    </div>
    <% end %>
</p>

<% end %>
  

 
