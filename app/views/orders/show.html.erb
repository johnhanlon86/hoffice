<div class="ordersContainer">


<div class= "ordersSpacer02">
</div>

<h1> Your Order Details:</h1>


<p id="notice"><%= notice %></p>

<p>
  <strong>Order date:</strong>
  <%= @order.order_date %>
</p>

<p>
  <strong>User:</strong>
  <%= @order.user.email %>
</p>

<p>
  <strong>Status:</strong>
  <%= @order.status %>
</p>

<table class="tableOrders02">
    <% @total = 0 %>
        <% @orderitems.each do |id,quantity| %>
            <tr>
                <% item = Orderitem.find_by_id(id) %>
            
                <td><%= item.title %></td>
                <td><%= item.quantity %></td>
                <td><%=number_to_currency(item.price, :unit => "€")%></td> 
                <td><%= number_to_currency(item.quantity * item.price, :unit => "€") %></td>
            </tr>
        
        <% ototal = (item.quantity * item.price)%>  
        
        <% @total += ototal %>
        
        </tr>
        
    <% end %>
    
    
    <tr>
        
        <td>Order Total: &euro; <%= @total %></td>
       
        <% shipping = 30 %>
        
        <% @overall = shipping + @total%>
        
        <tr>
            <td>Shipping &euro;30</td>
            <td>You Pay &euro; <%= @overall %></td>
        
        <td><td><h2><a href="/paid/<%= @order.id %>" class="button">Pay Now</a></h2></td>
        
        </td>
        
        </tr>

</table>
<div class= "ordersSpacer03">
</div>
</div>
